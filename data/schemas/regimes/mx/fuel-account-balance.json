{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gobl.org/draft-0/regimes/mx/fuel-account-balance",
  "$ref": "#/$defs/FuelAccountBalance",
  "$defs": {
    "FuelAccountBalance": {
      "properties": {
        "account_number": {
          "type": "string",
          "title": "Account Number"
        },
        "subtotal": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Subtotal",
          "calculated": true
        },
        "total": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Total",
          "calculated": true
        },
        "lines": {
          "items": {
            "$ref": "#/$defs/FuelAccountLine"
          },
          "type": "array",
          "title": "Lines"
        }
      },
      "type": "object",
      "required": [
        "account_number",
        "subtotal",
        "total",
        "lines"
      ]
    },
    "FuelAccountItem": {
      "properties": {
        "type": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "Type"
        },
        "unit": {
          "$ref": "https://gobl.org/draft-0/org/unit",
          "title": "Unit"
        },
        "name": {
          "type": "string",
          "title": "Name"
        },
        "price": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Price"
        }
      },
      "type": "object",
      "required": [
        "type",
        "name",
        "price"
      ]
    },
    "FuelAccountLine": {
      "properties": {
        "i": {
          "type": "integer",
          "title": "Index",
          "calculated": true
        },
        "e_wallet_id": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "E-wallet Identifier"
        },
        "purchase_date_time": {
          "$ref": "https://gobl.org/draft-0/cal/date-time",
          "title": "Purchase Date and Time"
        },
        "vendor_tax_code": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "Vendor's Tax Identity Code"
        },
        "service_station_code": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "Service Station Code"
        },
        "quantity": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Quantity"
        },
        "item": {
          "$ref": "#/$defs/FuelAccountItem",
          "title": "Item"
        },
        "purchase_code": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "Purchase Code"
        },
        "total": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Total",
          "calculated": true
        },
        "taxes": {
          "items": {
            "$ref": "#/$defs/FuelAccountTax"
          },
          "type": "array",
          "title": "Taxes"
        }
      },
      "type": "object",
      "required": [
        "i",
        "e_wallet_id",
        "purchase_date_time",
        "vendor_tax_code",
        "service_station_code",
        "quantity",
        "item",
        "purchase_code",
        "total",
        "taxes"
      ]
    },
    "FuelAccountTax": {
      "properties": {
        "cat": {
          "$ref": "https://gobl.org/draft-0/cbc/code",
          "title": "Category"
        },
        "percent": {
          "$ref": "https://gobl.org/draft-0/num/percentage",
          "title": "Percent"
        },
        "rate": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Rate"
        },
        "amount": {
          "$ref": "https://gobl.org/draft-0/num/amount",
          "title": "Amount",
          "calculated": true
        }
      },
      "type": "object",
      "required": [
        "cat",
        "amount"
      ]
    }
  }
}