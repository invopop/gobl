{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gobl.org/draft-0/cbc/code",
  "$ref": "#/$defs/Code",
  "$defs": {
    "Code": {
      "type": "string",
      "maxLength": 32,
      "minLength": 1,
      "pattern": "^[A-Z0-9]+([\\.\\-\\/ ]?[A-Z0-9]+)*$",
      "title": "Code",
      "description": "Alphanumerical text identifier with upper-case letters, no whitespace, nor symbols."
    }
  }
}