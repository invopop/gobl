{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gobl.org/draft-0/cal/time",
  "$ref": "#/$defs/Time",
  "$defs": {
    "Time": {
      "type": "string",
      "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
      "title": "Time",
      "description": "Civil time in simplified ISO format, like 13:45:30"
    }
  }
}